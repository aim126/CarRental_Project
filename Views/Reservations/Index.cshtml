@model IEnumerable<CarRentalProject.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarPickupDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDaysNeeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPIckupLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarReturnLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarPickupDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDaysNeeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarPIckupLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarReturnLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarType">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarType">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarType">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
